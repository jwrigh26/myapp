{
  "name": "my-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "start": "vite --port=3001",
    "build": "npm run images:generate && npm run content:generate && vite build",
    "build:prod": "npm run images:generate && npm run content:generate && vite build --mode production",
    "serve": "vite preview",
    "test": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "images:generate": "node scripts/generate-image-registry.js",
    "content:generate": "node scripts/build-content-registry.js",
    "firebase:emulate": "firebase emulators:start --only hosting",
    "firebase:emulate:prod": "npm run build:prod && firebase emulators:start --only hosting",
    "firebase:deploy": "npm run build && firebase deploy --only hosting",
    "firebase:deploy:prod": "npm run build:prod && firebase deploy --only hosting",
    "build:test": "vite build --mode production && node -e \"console.log('Build output contents:'); require('fs').readFileSync('./dist/assets/index-*.js', 'utf8').match(/FB_API_URL.{0,30}/g).forEach(m => console.log(m))\""
  },
  "devDependencies": {
    "@tanstack/router-devtools": "^1.111.7",
    "@tanstack/router-plugin": "^1.111.7",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.5",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/react-katex": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitejs/plugin-react": "^4.3.2",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.2",
    "vite": "^6.0.3",
    "vitest": "^3.0.7"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mdi/js": "^7.4.47",
    "@mui/material": "^6.4.5",
    "@tanstack/react-query": "^5.66.9",
    "@tanstack/react-router": "^1.111.7",
    "date-fns": "^4.1.0",
    "dnd-multi-backend": "^9.0.0",
    "firebase": "^11.5.0",
    "prism-react-renderer": "^2.4.1",
    "react": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dnd-multi-backend": "^9.0.0",
    "react-dnd-preview": "^9.0.0",
    "react-dnd-touch-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "react-katex": "^3.1.0",
    "react-transition-group": "^4.4.5"
  }
}
